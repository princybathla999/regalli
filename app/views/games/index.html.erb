<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table border="5px" bold >
  <thead>
    <tr>

      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <% if game.date.month==1 %>
              <%= "January" %>
          <% elsif game.date.month==2 %>
              <%= "February" %>
          <% elsif game.date.month==3 %>
              <%= "March" %>
          <% elsif game.date.month==4 %>
              <%= "April" %>
          <% elsif game.date.month==1 %>
              <%= "May" %>
          <% elsif game.date.month==6 %>
              <%= "June" %>
          <% elsif game.date.month==7 %>
              <%= "July" %>
          <% elsif game.date.month==8 %>
              <%= "August" %>
          <% elsif game.date.month==9 %>
              <%= "September" %>
          <% elsif game.date.month==10 %>
              <%= "October" %>
          <% elsif game.date.month==11 %>
              <%= "November" %>
          <% else %>
              <%= "December" %>
          <% end %>
          <%= game.date.day %>

        </td>
        <td><%= User.find(game.opponent).email %></td>
        <td><%= game.my_score %>-<%= game.opponent_score %></td>
        <td> <%if game.my_score >game.opponent_score %>
              <%= "W"%>
          <%else%>
              <%="L"%>
          <%end%></td>
        <!--<td><%= link_to 'Show', game %></td>-->
        <!--<td><%= link_to 'Edit', edit_game_path(game) %></td>-->
        <!--<td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

