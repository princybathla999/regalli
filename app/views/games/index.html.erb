<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th>Month</th>
      <th>Date</th>
      <th>Year</th>
      <th>Opponent</th>
      <th>My score</th>
      <th>Opponent score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.month %></td>
        <td><%= game.date %></td>
        <td><%= game.year %></td>
        <td><%= game.opponent %></td>
        <td><%= game.my_score %></td>
        <td><%= game.opponent_score %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

